<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.MyItemDetailActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/detail_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 아이템"
        android:textColor="@color/Gray800"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/trash"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/detail_image"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/camera_dummy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/indicator_tl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="indicator"
                android:paddingStart="@dimen/dot_padding"
                android:paddingEnd="@dimen/dot_padding"
                android:scrollIndicators="none"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/detail_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabGravity="center"
                app:tabIndicator="@null"
                app:tabMode="fixed"
                app:tabMaxWidth="40dp"
                app:tabMinWidth="40dp"/>

            <TextView
                android:id="@+id/detail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="디지털기기"
                android:textColor="@color/Gray600"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_image" />

            <ImageView
                android:id="@+id/detail_location_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:src="@drawable/detail_location"
                app:layout_constraintStart_toStartOf="@id/detail_category"
                app:layout_constraintTop_toBottomOf="@id/detail_category" />

            <TextView
                android:id="@+id/detail_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="울산 무거동"
                android:textColor="@color/Gray500"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/detail_location_iv"
                app:layout_constraintStart_toEndOf="@id/detail_location_iv"
                app:layout_constraintTop_toTopOf="@+id/detail_location_iv" />

            <TextView
                android:id="@+id/detail_name_tv"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Canon[렌즈 포함] EOS R8CanonCanon[렌즈포함] EOS R8CanonCanon"
                android:textColor="@color/Gray800"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/detail_category"
                app:layout_constraintTop_toBottomOf="@id/detail_location_iv" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:progressTint="@color/Blue300"
                android:rating="5"
                android:stepSize="1"
                app:layout_constraintStart_toStartOf="@+id/detail_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/detail_name_tv" />

            <TextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="(735)"
                android:textColor="@color/Gray700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/rating_bar"
                app:layout_constraintStart_toEndOf="@+id/rating_bar"
                app:layout_constraintTop_toTopOf="@+id/rating_bar" />

            <TextView
                android:id="@+id/deposit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="보증금"
                android:textColor="@color/Gray400"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/rating_bar"
                app:layout_constraintTop_toBottomOf="@id/rating_bar" />

            <TextView
                android:id="@+id/deposit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="150,000원"
                android:textColor="@color/Gray400"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/deposit_title"
                app:layout_constraintStart_toEndOf="@id/deposit_title"
                app:layout_constraintTop_toTopOf="@id/deposit_title" />

            <TextView
                android:id="@+id/dayPrice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="10,000원"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/deposit_title"
                app:layout_constraintTop_toBottomOf="@id/deposit_title" />

            <TextView
                android:id="@+id/day_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="/일"
                android:textColor="@color/Gray400"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/dayPrice_title"
                app:layout_constraintStart_toEndOf="@id/dayPrice_title"
                app:layout_constraintTop_toTopOf="@id/dayPrice_title" />

            <ImageView
                android:id="@+id/btn_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:src="@drawable/heart"
                app:layout_constraintBottom_toBottomOf="@+id/day_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/deposit_price" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0.7dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:background="@color/Gray200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/day_price" />

            <TextView
                android:id="@+id/detail_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:text="제품 설명 란입니다. "
                android:textColor="@color/Gray900"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <View
                android:id="@+id/detail_profile_background_iv"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/detali_profile_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_content" />

            <ImageView
                android:id="@+id/detail_profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/detail_profile_image"
                app:layout_constraintBottom_toBottomOf="@id/detail_profile_background_iv"
                app:layout_constraintStart_toStartOf="@id/detail_profile_background_iv"
                app:layout_constraintTop_toTopOf="@id/detail_profile_background_iv" />

            <TextView
                android:id="@+id/detail_profile_name_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:text="닉네임"
                android:textColor="@color/Gray900"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/detail_profile_iv"
                app:layout_constraintTop_toTopOf="@id/detail_profile_background_iv" />

            <TextView
                android:id="@+id/detail_profile_explan_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="응답빠름"
                android:textColor="@color/Gray500"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/detail_profile_name_iv"
                app:layout_constraintTop_toBottomOf="@id/detail_profile_name_iv" />

            <TextView
                android:id="@+id/location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="위치"
                android:textColor="@color/Gray900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/detail_profile_background_iv"
                app:layout_constraintTop_toBottomOf="@id/detail_profile_background_iv" />

            <!--            변경지점-->
            <com.google.android.gms.maps.MapView
                android:id="@+id/detail_map"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/reserve_test_map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_title"
                android:contentDescription="map"/>

            <TextView
                android:id="@+id/detail_map_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="위치 상세표시"
                android:textColor="@color/Gray600"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/detail_map"
                app:layout_constraintTop_toBottomOf="@id/detail_map" />

            <TextView
                android:id="@+id/detail_review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:text="사용자 리뷰"
                android:textColor="@color/Gray900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/location_title"
                app:layout_constraintTop_toBottomOf="@id/detail_map_location_tv" />

            <TextView
                android:id="@+id/review_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="0"
                android:textColor="#1277ED"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/detail_review_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/detail_review_tv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="리뷰"
                android:textColor="@color/Gray900"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/review_count_tv"
                app:layout_constraintTop_toTopOf="@id/detail_review_tv" />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/Gray200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/review_count_tv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/review_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line"
                tools:listitem="@layout/my_review_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <android.widget.Button
        android:id="@+id/btn_go_myItem_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정보수정"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_done_shape"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>