<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:onClick="goToHomeFragment"
        app:srcCompat="@drawable/back_ic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/search_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="118dp"
        android:text="검색"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/search_back_iv"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:focusable="false"
        app:queryBackground="@color/gray_500"
        app:queryHint="찾는 상품을 검색해 보세요"
        app:layout_constraintTop_toBottomOf="@+id/search_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray_100"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="찾는 상품을 검색해 보세요"
        android:textColor="@color/gray_500"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/search_bar"
        app:layout_constraintBottom_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        android:layout_marginLeft="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>