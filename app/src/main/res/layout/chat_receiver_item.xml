<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/chat_receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:text="time"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_receiver_message"
        app:layout_constraintStart_toEndOf="@+id/chat_receiver_message"
        app:layout_constraintTop_toTopOf="@+id/chat_receiver_message"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/chat_receiver_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/messenger_received_message"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:text="안녕하세요!!"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>