                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textSize="12sp"
                    android:textColor="@color/gray_800"
                    app:layout_constraintBottom_toBottomOf="@id/pay_gochat_title1_image"
                    app:layout_constraintStart_toEndOf="@id/pay_gochat_title1_image"
