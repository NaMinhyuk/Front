<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.PwChangeActivity">

    <ImageView
        android:id="@+id/btn_back_change_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textColor="@color/Gray900"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back_change_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back_change_pw" />

    <TextView
        android:id="@+id/old_pw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="기존 비밀번호"
        android:textColor="@color/Gray900"
        app:layout_constraintStart_toStartOf="@+id/btn_back_change_pw"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_change_pw" />

    <EditText
        android:id="@+id/old_pw_input_box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_line"
        android:hint="기존의 비밀번호를 입력하세요."
        android:inputType="text|textPassword"
        android:paddingStart="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_pw_title" />

    <TextView
        android:id="@+id/old_pw_wrong_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올바른 비밀번호를 입력해주세요"
        android:textSize="10sp"
        android:textColor="@color/red_500"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/old_pw_input_box"
        app:layout_constraintTop_toBottomOf="@+id/old_pw_input_box" />.

    <TextView
        android:id="@+id/new_pw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="새로운 비밀번호"
        android:textColor="@color/Gray900"
        app:layout_constraintStart_toStartOf="@+id/btn_back_change_pw"
        app:layout_constraintTop_toBottomOf="@+id/old_pw_input_box" />

    <EditText
        android:id="@+id/new_pw_input_box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_line"
        android:hint="새로운 비밀번호를 입력하세요."
        android:inputType="text|textPassword"
        android:paddingStart="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_pw_title" />

    <TextView
        android:id="@+id/new_pw_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영문 숫자 조합 8~15자 조합으로 입력해 주세요."
        android:textSize="10sp"
        android:textColor="@color/red_500"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/new_pw_input_box"
        app:layout_constraintTop_toBottomOf="@+id/new_pw_input_box" />

    <TextView
        android:id="@+id/new_pw_check_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="새로운 비밀번호 확인"
        android:textColor="@color/Gray900"
        app:layout_constraintStart_toStartOf="@+id/btn_back_change_pw"
        app:layout_constraintTop_toBottomOf="@+id/new_pw_input_box" />

    <EditText
        android:id="@+id/new_pw_check_input_box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_line"
        android:hint="새로운 비밀번호를 입력하세요."
        android:inputType="text|textPassword"
        android:paddingStart="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_pw_check_title" />

    <TextView
        android:id="@+id/new_pw_check_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="@color/red_500"
        android:textSize="10sp"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/new_pw_check_input_box"
        app:layout_constraintTop_toBottomOf="@+id/new_pw_check_input_box" />

    <android.widget.Button
        android:id="@+id/btn_edit_pw_done"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="수정하기"
        android:textStyle="bold"
        android:enabled="false"
        android:background="@drawable/pw_change_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>