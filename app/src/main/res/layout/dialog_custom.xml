<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/dialog_background">
    <TextView
        android:id="@+id/telNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이템을 삭제하시겠습니까 ?"
        android:textColor="@color/Gray900"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="삭제 시 복구가 불가능합니다."
        android:textColor="@color/Gray600"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/telNum"
        app:layout_constraintStart_toStartOf="@+id/telNum"
        app:layout_constraintTop_toBottomOf="@+id/telNum" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4">

        <android.widget.Button
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_delete_yes"
            android:layout_marginEnd="5dp"
            android:text="삭제"
            android:textColor="@color/red_500"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_delete_no"
            android:layout_marginStart="5dp"
            android:text="취소"
            android:textStyle="bold"
            android:textColor="@color/Gray900"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>