<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/regist_home_header_cl"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/regist_home_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:id="@+id/regist_home_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_top_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="64dp"/>

        <ImageView
            android:id="@+id/regist_home_notification_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reservation_notifications"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/reservation_myitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY 아이템"
        android:scrollbarSize="18sp"
        android:textColor="@color/gray_900"
        app:layout_constraintTop_toBottomOf="@id/regist_home_header_cl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필터"
        android:scrollbarSize="12sp"
        android:textColor="@color/gray_800"
        app:layout_constraintTop_toBottomOf="@id/regist_home_header_cl"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17.5dp"
        android:layout_marginRight="38dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regist_home_menu_btn"
        app:layout_constraintTop_toBottomOf="@id/regist_home_header_cl"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp" />

<!--    미구현-->
    <ImageView
        android:id="@+id/reservation_main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reservation_main_1"
        app:layout_constraintTop_toBottomOf="@id/reservation_myitem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/reservation_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reservation_main_2"
        app:layout_constraintTop_toTopOf="@id/reservation_main1"
        app:layout_constraintStart_toEndOf="@id/reservation_main1"
        android:layout_marginLeft="12dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_main3"
        android:src="@drawable/reservation_main_3"
        app:layout_constraintTop_toBottomOf="@id/reservation_main1"
        app:layout_constraintStart_toStartOf="@id/reservation_main1"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_main4"
        android:src="@drawable/reservation_main_4"
        app:layout_constraintTop_toBottomOf="@id/reservation_main2"
        app:layout_constraintStart_toStartOf="@id/reservation_main2"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/regist_home_registbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regist_home_registbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>