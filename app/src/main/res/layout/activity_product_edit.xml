<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.ProductEditActivity">

    <ImageView
        android:id="@+id/regist_headerbox_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/regist_headerbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/edit_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regist_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제품 수정"
        android:textColor="@color/Gray800"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        tools:ignore="HardCodedText"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_headerbox_iv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="160dp">

            <TextView
                android:id="@+id/regist_body_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품 이름"
                android:textColor="@color/Gray600"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardCodedText"/>

            <ImageView
                android:id="@+id/regist_title1_inputbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/regist_input_box"
                app:layout_constraintStart_toStartOf="@+id/regist_body_title1"
                app:layout_constraintTop_toBottomOf="@id/regist_body_title1" />

            <EditText
                android:id="@+id/product_edit_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@null"
                android:hint="제품 이름을 작성해 주세요"
                android:paddingStart="20dp"
                android:text=""
                android:textColor="@color/Gray800"
                android:textSize="14sp"
                android:inputType="text"
                tools:ignore="HardCodedText"
                app:layout_constraintBottom_toBottomOf="@id/regist_title1_inputbox"
                app:layout_constraintEnd_toEndOf="@+id/regist_title1_inputbox"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/regist_body_title1"
                app:layout_constraintTop_toTopOf="@id/regist_title1_inputbox"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/regist_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="카테고리"
                android:textColor="@color/Gray700"
                android:textSize="16sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_edit_name"
                app:layout_constraintTop_toBottomOf="@id/product_edit_name" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="*"
                android:textColor="@color/Error"
                android:textSize="12sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toEndOf="@id/regist_title2"
                app:layout_constraintTop_toTopOf="@id/regist_title2" />


            <TextView
                android:id="@+id/product_category_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/regist_category_1"
                android:gravity="center"
                android:text="디지털기기"
                android:textColor="@color/Gray700"
                android:textSize="13sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/regist_title2"
                app:layout_constraintTop_toBottomOf="@id/regist_title2" />


            <TextView
                android:id="@+id/product_category_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="악기/음향"
                android:textSize="13sp"
                android:textColor="@color/Gray700"
                android:background="@drawable/regist_category_2"
                app:layout_constraintTop_toTopOf="@id/product_category_1"
                app:layout_constraintStart_toEndOf="@id/product_category_1"
                android:layout_marginStart="8dp"
                android:gravity="center"
                tools:ignore="HardCodedText"/>


            <TextView
                android:id="@+id/product_category_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/regist_category_3"
                android:gravity="center"
                android:text="게임/취미"
                android:textColor="@color/Gray700"
                android:textSize="13sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_category_1"
                app:layout_constraintTop_toBottomOf="@id/product_category_1" />



            <TextView
                android:id="@+id/product_category_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캠핑/레저"
                android:textSize="13sp"
                android:textColor="@color/Gray700"
                android:background="@drawable/regist_category_4"
                app:layout_constraintTop_toTopOf="@id/product_category_3"
                app:layout_constraintStart_toEndOf="@id/product_category_3"
                android:layout_marginStart="8dp"
                android:gravity="center"
                tools:ignore="HardCodedText"/>


            <TextView
                android:id="@+id/product_category_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의류"
                android:textSize="13sp"
                android:textColor="@color/Gray700"
                app:layout_constraintTop_toTopOf="@id/product_category_4"
                app:layout_constraintStart_toEndOf="@id/product_category_4"
                android:layout_marginStart="8dp"
                android:background="@drawable/regist_category_5"
                android:gravity="center"
                tools:ignore="HardCodedText"/>

            <TextView
                android:id="@+id/product_category_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/regist_category_6"
                android:gravity="center"
                android:text="신발"
                android:textColor="@color/Gray700"
                android:textSize="13sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_category_3"
                app:layout_constraintTop_toBottomOf="@id/product_category_3" />


            <TextView
                android:id="@+id/product_category_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생활/주방"
                android:textSize="13sp"
                android:textColor="@color/Gray700"
                app:layout_constraintTop_toTopOf="@id/product_category_6"
                app:layout_constraintStart_toEndOf="@id/product_category_6"
                android:layout_marginStart="8dp"
                android:background="@drawable/regist_category_7"
                android:gravity="center"
                tools:ignore="HardCodedText"/>

            <TextView
                android:id="@+id/product_category_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가구"
                android:textSize="13sp"
                android:textColor="@color/Gray700"
                app:layout_constraintTop_toTopOf="@id/product_category_6"
                app:layout_constraintStart_toEndOf="@id/product_category_7"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:background="@drawable/regist_category_8"
                tools:ignore="HardCodedText"/>


            <TextView
                android:id="@+id/regist_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="1일 대여가격"
                android:textColor="@color/Gray600"
                android:textSize="16sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_category_6"
                app:layout_constraintTop_toBottomOf="@id/product_category_6" />

            <ImageView
                android:id="@+id/product_edit_day_price_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/regist_input_box"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/regist_title3"
                app:layout_constraintTop_toBottomOf="@id/regist_title3" />

            <EditText
                android:id="@+id/product_edit_day_price"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@null"
                android:hint="1일 대여 가격을 작성해 주세요"
                android:paddingStart="20dp"
                android:text=""
                android:textColor="@color/Gray800"
                android:textSize="14sp"
                android:inputType="number"
                tools:ignore="HardCodedText"
                app:layout_constraintBottom_toBottomOf="@id/product_edit_day_price_box"
                app:layout_constraintEnd_toEndOf="@+id/product_edit_day_price_box"
                app:layout_constraintStart_toStartOf="@+id/regist_title3"
                app:layout_constraintTop_toTopOf="@id/product_edit_day_price_box" />

            <TextView
                android:id="@+id/regist_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="1시간 대여가격"
                android:textColor="@color/Gray600"
                android:textSize="16sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_edit_day_price_box"
                app:layout_constraintTop_toBottomOf="@id/product_edit_day_price_box" />

            <ImageView
                android:id="@+id/regist_title4_inputbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/regist_input_box"
                app:layout_constraintStart_toStartOf="@+id/regist_title4"
                app:layout_constraintTop_toBottomOf="@id/regist_title4" />

            <EditText
                android:id="@+id/product_edit_hour_price"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@null"
                android:hint="1시간 대여 가격을 작성해 주세요"
                android:paddingStart="20dp"
                android:text=""
                android:textColor="@color/Gray800"
                android:textSize="14sp"
                android:inputType="number"
                tools:ignore="HardCodedText"
                app:layout_constraintBottom_toBottomOf="@id/regist_title4_inputbox"
                app:layout_constraintEnd_toEndOf="@+id/regist_title4_inputbox"
                app:layout_constraintStart_toStartOf="@+id/regist_title4"
                app:layout_constraintTop_toTopOf="@id/regist_title4_inputbox" />

            <TextView
                android:id="@+id/regist_title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="보증금 설정"
                android:textColor="@color/Gray600"
                android:textSize="16sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/regist_title4_inputbox"
                app:layout_constraintTop_toBottomOf="@id/regist_title4_inputbox" />

            <ImageView
                android:id="@+id/product_edit_deposit_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/regist_input_box"
                app:layout_constraintStart_toStartOf="@+id/regist_title5"
                app:layout_constraintTop_toBottomOf="@id/regist_title5" />

            <EditText
                android:id="@+id/product_edit_deposit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@null"
                android:hint="보증금을 설정해 주세요"
                android:paddingStart="20dp"
                android:text=""
                android:textColor="@color/Gray800"
                android:textSize="14sp"
                android:inputType="number"
                tools:ignore="HardCodedText"
                app:layout_constraintBottom_toBottomOf="@id/product_edit_deposit_box"
                app:layout_constraintEnd_toEndOf="@+id/product_edit_deposit_box"
                app:layout_constraintStart_toStartOf="@+id/regist_title5"
                app:layout_constraintTop_toTopOf="@id/product_edit_deposit_box" />

            <TextView
                android:id="@+id/regist_title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="대여기간 설정"
                android:textColor="@color/Gray600"
                android:textSize="16sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_edit_deposit_box"
                app:layout_constraintTop_toBottomOf="@id/product_edit_deposit_box" />

            <TextView
                android:id="@+id/product_edit_set_time"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:text="2.23(월) - 4.13(금)(8일)"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/regist_title6"
                app:layout_constraintTop_toBottomOf="@id/regist_title6" />

            <TextView
                android:id="@+id/regist_title7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="상세 설명"
                android:textColor="@color/Gray600"
                android:textSize="16sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_edit_set_time"
                app:layout_constraintTop_toBottomOf="@id/product_edit_set_time" />

            <ImageView
                android:id="@+id/product_edit_content_box"
                android:layout_width="wrap_content"
                android:layout_height="192dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:src="@drawable/regist_detail_inputbox"
                app:layout_constraintStart_toStartOf="@+id/regist_title7"
                app:layout_constraintTop_toBottomOf="@id/regist_title7" />

            <EditText
                android:id="@+id/product_edit_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:gravity="top"
                android:hint="제품에 대한 설명을 해 주세요"
                android:padding="15dp"
                android:text="@={activity.product_text}"
                android:textColor="@color/Gray800"
                android:textSize="14sp"
                tools:ignore="HardCodedText"
                app:layout_constraintBottom_toBottomOf="@+id/product_edit_content_box"
                app:layout_constraintEnd_toEndOf="@+id/product_edit_content_box"
                app:layout_constraintStart_toStartOf="@+id/regist_title7"
                app:layout_constraintTop_toTopOf="@id/product_edit_content_box" />

            <TextView
                android:id="@+id/regist_detail_maxnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="(0/200)"
                android:textColor="@color/Gray500"
                android:textSize="14sp"
                tools:ignore="HardCodedText"
                app:layout_constraintEnd_toEndOf="@id/product_edit_content_box"
                app:layout_constraintTop_toBottomOf="@id/product_edit_content_box" />

            <TextView
                android:id="@+id/detail_title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="사진 업로드"
                android:textColor="@color/Gray700"
                android:textSize="16sp"
                tools:ignore="HardCodedText"
                app:layout_constraintStart_toStartOf="@+id/product_edit_content_box"
                app:layout_constraintTop_toBottomOf="@id/product_edit_content_box" />


            <HorizontalScrollView
                android:id="@+id/product_edit_image_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="15dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_title8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="Image ScrollView"
                tools:ignore="HardCodedText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_edit_image_iv"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/regist_image_inputbox" />


                    <ImageView
                        android:id="@+id/edit_image1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="8dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/edit_image2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="8dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/edit_image3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="8dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/edit_image4"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="8dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/edit_image5"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="8dp"
                        android:visibility="visible"
                        android:layout_marginEnd="30dp"/>

                </LinearLayout>
            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <android.widget.Button
        android:id="@+id/btn_edit_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="수정하기"
        android:textColor="@color/white"
        android:background="@drawable/btn_done_shape"
        android:onClick="@{() -> activity.registerProduct()}"
        tools:ignore="HardCodedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>