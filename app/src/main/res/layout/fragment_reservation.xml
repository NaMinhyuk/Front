<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/reservation_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/fugaze_one"
            android:text="LIFE SHARING"
            android:textColor="@color/blue_300"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/reservation_search_ic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            app:srcCompat="@drawable/home_top_search" />

        <ImageView
            android:id="@+id/reservation_alarm_ic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            app:srcCompat="@drawable/home_top_alarm" />

    </LinearLayout>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fillViewport="true"
        android:contentDescription="Scroll view with two fragments"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            
            <FrameLayout
                android:id="@+id/res_cal_fl"
                android:layout_width="328dp"
                android:layout_height="390dp"
                android:layout_marginTop="40dp"/>
            
            <FrameLayout
                android:id="@+id/res_list_fl"
                android:layout_width="328dp"
                android:layout_height="585dp"
                android:layout_marginTop="40dp"/>
            
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>