<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp" />

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_location"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintStart_toStartOf="@id/product_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/location_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="울산 무거동"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintStart_toEndOf="@id/location_image"
        android:layout_marginTop="8dp"
        android:textSize="11sp"
        android:textColor="#98989E" />

    <ImageView
        android:id="@+id/star1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toStartOf="@id/location_image"
        app:layout_constraintTop_toBottomOf="@id/location_image"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/star2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star1_iv"
        app:layout_constraintTop_toBottomOf="@id/location_image"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/star3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star2_iv"
        app:layout_constraintTop_toBottomOf="@id/location_image"
        android:layout_marginTop="2dp"/>
    <ImageView
        android:id="@+id/star4_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star3_iv"
        app:layout_constraintTop_toBottomOf="@id/location_image"
        android:layout_marginTop="2dp"/>
    <ImageView
        android:id="@+id/star5_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star4_iv"
        app:layout_constraintTop_toBottomOf="@id/location_image"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(0)"
        android:textSize="11sp"
        android:textColor="#1277ED"
        app:layout_constraintTop_toTopOf="@id/star5_iv"
        app:layout_constraintStart_toEndOf="@id/star5_iv"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:text="Canon[렌즈 포함] EOS R8CanonCanon[렌즈포함] EOS R8CanonCanon"
        android:textSize="14sp"
        android:textColor="@color/Gray800"
        app:layout_constraintTop_toBottomOf="@id/review_tv"
        app:layout_constraintStart_toStartOf="@id/location_image"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/money_keep_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500,000"
        android:textSize="11sp"
        android:textColor="@color/Gray400"
        app:layout_constraintStart_toStartOf="@id/location_image"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="11sp"
        android:textColor="@color/Gray400"
        app:layout_constraintStart_toEndOf="@id/money_keep_tv"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        android:textSize="12sp"
        android:textColor="@color/Gray800"
        app:layout_constraintStart_toStartOf="@id/location_image"
        app:layout_constraintTop_toBottomOf="@id/money_keep_tv"
        android:layout_marginTop="2.5dp" />


    <TextView
        android:id="@+id/money_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000"
        android:textSize="16sp"
        android:textColor="@color/Gray900"
        app:layout_constraintStart_toEndOf="@id/day_tv"
        app:layout_constraintTop_toBottomOf="@id/money_keep_tv"
        android:layout_marginLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/Gray800"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/money_day_tv"
        app:layout_constraintTop_toTopOf="@id/day_tv"
        android:layout_marginLeft="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>