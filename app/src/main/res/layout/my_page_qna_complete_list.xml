<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">

    <ImageView
        android:id="@+id/qna_complete_state_ic"
        android:layout_width="34dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/done_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>.

    <TextView
        android:id="@+id/qna_complete_list_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="이메일 인증이 안됩니다."
        android:textColor="@color/gray_900"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/qna_complete_state_ic"
        app:layout_constraintTop_toTopOf="@id/qna_complete_state_ic" />

    <TextView
        android:id="@+id/qna_complete_list_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:text="23.07.03"
        android:textColor="@color/gray_400"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/qna_complete_list_title_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/qna_complete_list_content_tv"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="본문 텍스트 예시입니다. 최대 두 줄로 진행되며 더 길어질 시 요약하게 됩니다."
        android:textColor="@color/gray_900"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/qna_complete_state_ic"
        app:layout_constraintStart_toStartOf="@id/qna_complete_state_ic"/>

    <View
        android:id="@+id/qna_complete_list_view"
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_centerInParent="true"
        android:background="@color/gray_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qna_complete_list_content_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>