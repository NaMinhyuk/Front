<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/home_bar"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="18dp"
            android:layout_gravity="center"
            android:text="LIFE SHARING"
            android:textSize="55px"
            android:fontFamily="@font/fugaze_one"
            android:textColor="@color/blue_300" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="133dp"
            android:layout_gravity="center"
            android:src="@drawable/search_ic"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="17dp"
            android:layout_gravity="center"
            android:src="@drawable/alarm_ic"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_bar"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_banner_vp"
                android:layout_width="360dp"
                android:layout_height="227dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="40dp"
                android:text="카테고리"
                android:textSize="48px"
                android:textStyle="normal"
                android:textColor="@color/gray_900"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_category_vp"
                android:layout_width="328dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="40dp"
                android:text="최신 등록 아이템"
                android:textSize="53px"
                android:textStyle="normal"
                android:textColor="@color/gray_900"/>
            
            <TableLayout
                android:layout_width="328dp"
                android:layout_height="617dp"
                android:layout_gravity="center">

                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="158dp"
                            android:layout_height="158dp"
                            android:src="@drawable/camera_img"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="울산 무거동"
                            android:textColor="@color/gray_500"
                            android:textSize="35px"
                            android:textStyle="normal"/>

                        <RatingBar
                            android:layout_width="104dp"
                            android:layout_height="13dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="1"
                            style="@style/Widget.AppCompat.RatingBar.Small"/>

                        <EditText
                            android:layout_width="156dp"
                            android:layout_height="40dp" />

                        <EditText
                            android:layout_width="53dp"
                            android:layout_height="13dp" />

                        <EditText
                            android:layout_width="76dp"
                            android:layout_height="19dp" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>