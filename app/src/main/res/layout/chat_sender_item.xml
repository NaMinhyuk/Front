<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/chat_sender_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="time"
        android:textSize="12sp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/chat_sender_message"
        app:layout_constraintEnd_toStartOf="@+id/chat_sender_message"
        app:layout_constraintTop_toTopOf="@+id/chat_sender_message" />


    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/chat_sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/messenger_send_message"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:text="안녕하세요!!"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>