<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/write_qna_back_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gray_600" />

    <TextView
        android:id="@+id/write_qna_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="2dp"
        android:text="문의작성"
        android:textColor="@color/gray_800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/write_qna_back_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/write_qna_back_iv" />

    <View
        android:id="@+id/write_qna_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_qna_title_tv" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="문의 제목"
        android:textColor="@color/Gray600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_qna_line_view" />

    <EditText
        android:id="@+id/qna_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/qna_text_box"
        android:ems="10"
        android:hint="제목을 입력하세요."
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="문의 내용"
        android:textColor="@color/Gray600"
        app:layout_constraintStart_toStartOf="@+id/qna_title"
        app:layout_constraintTop_toBottomOf="@+id/qna_title" />

    <EditText
        android:id="@+id/qna_body"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/qna_text_box"
        android:ems="10"
        android:hint="좋았던 점이나 아쉬웠던 점을 적어주세요."
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:textSize="12sp"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="사진 업로드 (최대 5장)"
        android:textColor="@color/Gray600"
        app:layout_constraintStart_toStartOf="@+id/qna_body"
        app:layout_constraintTop_toBottomOf="@+id/qna_body" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:contentDescription="QnA Image List">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btn_qna_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/regist_image_inputbox" />

            <ImageView
                android:id="@+id/qna_image1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="7dp" />

            <ImageView
                android:id="@+id/qna_image2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="7dp" />

            <ImageView
                android:id="@+id/qna_image3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="7dp" />

            <ImageView
                android:id="@+id/qna_image4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="7dp" />

            <ImageView
                android:id="@+id/qna_image5"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="7dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_done_shape"
        android:text="등록하기"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>