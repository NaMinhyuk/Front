<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/location_ic"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/menu_location"
        app:tint="@color/gray_500"
        app:layout_constraintTop_toBottomOf="@id/item_img"
        app:layout_constraintStart_toStartOf="@id/item_img"/>

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:text="울산 무거동"
        android:textSize="11sp"
        android:textColor="@color/gray_500"
        app:layout_constraintBottom_toBottomOf="@id/location_ic"
        app:layout_constraintStart_toEndOf="@id/location_ic"/>

    <ImageView
        android:id="@+id/star_iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toStartOf="@id/location_ic"
        app:layout_constraintTop_toBottomOf="@id/location_ic"/>

    <ImageView
        android:id="@+id/star_iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star_iv_1"
        app:layout_constraintTop_toBottomOf="@id/location_ic"/>

    <ImageView
        android:id="@+id/star_iv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star_iv_2"
        app:layout_constraintTop_toBottomOf="@id/location_ic"/>

    <ImageView
        android:id="@+id/star_iv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star_iv_3"
        app:layout_constraintTop_toBottomOf="@id/location_ic"/>

    <ImageView
        android:id="@+id/star_iv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/detail_star"
        app:layout_constraintStart_toEndOf="@id/star_iv_4"
        app:layout_constraintTop_toBottomOf="@id/location_ic"/>

    <TextView
        android:id="@+id/review_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="(0)"
        android:textSize="11sp"
        android:textColor="@color/blue_300"
        app:layout_constraintTop_toTopOf="@id/star_iv_5"
        app:layout_constraintStart_toEndOf="@id/star_iv_5" />

    <TextView
        android:id="@+id/new_item_name_tv"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Canon[렌즈 포함] EOS \n R8CanonCanon[렌즈포함] EOS R8CanonCanon"
        android:textSize="14sp"
        android:textColor="@color/gray_800"
        app:layout_constraintTop_toBottomOf="@id/review_num_tv"
        app:layout_constraintStart_toStartOf="@id/location_ic"/>

    <TextView
        android:id="@+id/deposit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="500,000"
        android:textSize="11sp"
        android:textColor="@color/gray_400"
        app:layout_constraintStart_toStartOf="@id/location_ic"
        app:layout_constraintTop_toBottomOf="@id/new_item_name_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="원"
        android:textSize="11sp"
        android:textColor="@color/gray_400"
        app:layout_constraintStart_toEndOf="@id/deposit_tv"
        app:layout_constraintTop_toBottomOf="@id/new_item_name_tv" />

    <TextView
        android:id="@+id/a_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:text="일"
        android:textSize="12sp"
        android:textColor="@color/gray_800"
        app:layout_constraintStart_toStartOf="@id/location_ic"
        app:layout_constraintTop_toBottomOf="@id/deposit_tv"/>

    <TextView
        android:id="@+id/day_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="10,000"
        android:textSize="16sp"
        android:textColor="@color/gray_900"
        app:layout_constraintStart_toEndOf="@id/a_day_tv"
        app:layout_constraintTop_toBottomOf="@id/deposit_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="원"
        android:textColor="@color/gray_800"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/day_price_tv"
        app:layout_constraintTop_toTopOf="@id/a_day_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>