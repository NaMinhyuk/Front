<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="328dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/res_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/res_filter_title"
        android:textColor="@color/gray_900"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/res_list_spinner"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/res_list_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/res_filter_rl"
        android:layout_width="match_parent"
        android:layout_height="585dp"
        tools:listitem="@layout/reservation_list_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/res_list_title"
        app:layout_constraintStart_toStartOf="@id/res_list_title" />

</androidx.constraintlayout.widget.ConstraintLayout>