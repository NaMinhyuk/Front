<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.example.lifesharing.messenger.MessengerDetailWithDummy" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_300"
        tools:context=".messenger.MessengerDetailActivity">

        <LinearLayout
            android:id="@+id/messenger_detail_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:weightSum="100"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/messenger_detail_back"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/messenger_detail_back"/>

            <View
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <TextView
                android:layout_weight="10"
                android:layout_gravity="center"
                android:id="@+id/messenger_detail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="송하영"
                android:textSize="16sp"
                android:textColor="@color/gray_800"
                android:textStyle="bold"
                />

            <View
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/messenger_detail_3dot"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/messenger_detail_item_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/messenger_detail_appbar">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/camera_dummy" />


            <View
                android:layout_width="11dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/messenger_location_pin"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/messenger_detail_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="울산 무거동"
                        android:textColor="@color/gray_500"
                        android:textSize="11sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/messenger_detail_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래 제품 데이터"
                    android:textColor="@color/gray_800"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래 제품 데이터2"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="6dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="26dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:textColor="@color/gray_800"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/messenger_detail_day_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000"
                        android:textColor="@color/blue_400"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="@color/gray_800"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="14dp"
                        android:background="@color/gray_800" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:textColor="@color/gray_800"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/messenger_detail_hour_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,000"
                        android:textColor="@color/blue_400"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="@color/gray_800"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <!--대화 내용-->

        <!--입력 레이아웃-->
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/messenger_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:background="#FFF"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/messenger_add"/>

            <EditText
                android:id="@+id/messenger_edit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="85"
                android:background="@drawable/messenger_message_input"
                android:hint="  메세지 보내기"
                android:paddingStart="10dp" />

        </LinearLayout>

        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캐논 카메라 빌리고 싶어요!!!"
                android:textColor="#000"
                android:background="@drawable/messenger_received_message"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="240dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답장 해주세요!"
                android:textColor="#000"
                android:background="@drawable/messenger_received_message"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="240dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요!"
                android:textColor="#000"
                android:background="@drawable/messenger_received_message"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:layout_marginLeft="150dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아 죄송합니다 이제 봤어요!!"
                android:textColor="#fff"
                android:background="@drawable/messenger_send_message"
                />


            <View
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:layout_marginLeft="240dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요!"
                android:textColor="#fff"
                android:background="@drawable/messenger_send_message"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:layout_marginLeft="240dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요!"
                android:textColor="#fff"
                android:background="@drawable/messenger_send_message"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
