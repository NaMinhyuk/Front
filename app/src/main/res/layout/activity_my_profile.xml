<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/my_profile_back_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/back_ic"
        app:tint="@color/gray_600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/my_profile_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="내정보"
        android:textColor="@color/gray_800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_title_tv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/image_round"
                android:src="@drawable/detail_profile_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.widget.Button
                android:id="@+id/btn_editImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="edit profile image"
                android:background="@drawable/mypage_myprofile_change_ic"
                app:layout_constraintBottom_toBottomOf="@+id/img_profile"
                app:layout_constraintEnd_toEndOf="@+id/img_profile" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="이메일"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_profile" />

            <EditText
                android:id="@+id/email_input_box"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:inputType="text"
                android:text="1234@naver.com"
                android:textSize="15sp"
                android:paddingStart="15dp"
                android:background="@drawable/btn_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/email_title"
                app:layout_constraintTop_toBottomOf="@+id/email_title" />

            <TextView
                android:id="@+id/pw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_input_box" />

            <android.widget.Button
                android:id="@+id/pw_change_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/blue_line_gray_background"
                android:text="비밀번호 변경"
                android:textColor="@color/Blue400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/pw_title"
                app:layout_constraintTop_toBottomOf="@+id/pw_title" />

            <TextView
                android:id="@+id/pw_submit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호 확인"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pw_change_btn" />

            <EditText
                android:id="@+id/pw_submit_box"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_line"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:maxLines="1"
                android:hint="*****"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/pw_submit_title"
                app:layout_constraintTop_toBottomOf="@+id/pw_submit_title" />

            <TextView
                android:id="@+id/nickname_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="닉네임"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pw_submit_box" />

            <EditText
                android:id="@+id/nickname_input_box"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:inputType="text"
                android:hint="test"
                android:paddingStart="15dp"
                android:textSize="15sp"
                android:background="@drawable/btn_line"
                app:layout_constraintStart_toStartOf="@+id/nickname_title"
                app:layout_constraintTop_toBottomOf="@+id/nickname_title" />

            <TextView
                android:id="@+id/usage_true_or_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="사용 가능한 닉네임입니다."
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/nickname_input_box"
                app:layout_constraintTop_toBottomOf="@+id/nickname_input_box" />

            <android.widget.Button
                android:id="@+id/btn_nickname_check"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/blue_line_gray_background"
                android:text="중복확인"
                android:textColor="@color/Blue400"
                app:layout_constraintBottom_toBottomOf="@+id/nickname_input_box"
                app:layout_constraintStart_toEndOf="@+id/nickname_input_box"
                app:layout_constraintTop_toTopOf="@+id/nickname_input_box" />

            <TextView
                android:id="@+id/phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="전화번호"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usage_true_or_false" />

            <EditText
                android:id="@+id/phone_input_box"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_line"
                android:ems="10"
                android:inputType="phone"
                android:paddingStart="15dp"
                android:text="010-1234-1234"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/phone_title"
                app:layout_constraintTop_toBottomOf="@+id/phone_title" />

            <android.widget.Button
                android:id="@+id/phone_submit_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/gray_300"
                android:text="확인"
                android:textColor="@color/gray_700"
                app:layout_constraintBottom_toBottomOf="@+id/phone_input_box"
                app:layout_constraintStart_toEndOf="@+id/phone_input_box"
                app:layout_constraintTop_toTopOf="@+id/phone_input_box" />

            <TextView
                android:id="@+id/location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="위치인증"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_input_box" />

            <android.widget.Button
                android:id="@+id/Location_check"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/blue_line_gray_background"
                android:text="위치 인증하기"
                android:textColor="@color/Blue400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/location_title"
                app:layout_constraintTop_toBottomOf="@+id/location_title" />

            <android.widget.Button
                android:id="@+id/btn_edit_done"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_done_shape"
                android:text="수정하기"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Location_check" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>