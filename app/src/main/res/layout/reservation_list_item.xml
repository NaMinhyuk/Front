<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="94dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/res_list_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/pay_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:id="@+id/res_list_location_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/pay_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/res_list_image"/>

    <TextView
        android:id="@+id/res_list_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="3dp"
        android:text="울산 무거동"
        android:textSize="11dp"
        android:textColor="@color/gray_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/res_list_location_ic"/>

    <TextView
        android:id="@+id/res_list_product_name"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:text="Canon [렌즈포함] EOS Canon [렌즈포함] EOS"
        android:textSize="14dp"
        android:textColor="@color/gray_900"
        app:layout_constraintTop_toBottomOf="@id/res_list_location_ic"
        app:layout_constraintStart_toStartOf="@id/res_list_location_ic"/>
    
    <ImageView
        android:id="@+id/res_list_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/reservation_bluebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/res_list_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:text="대여"
        android:textSize="12dp"
        android:textColor="@color/gray_500"
        app:layout_constraintTop_toTopOf="@id/res_list_start_date"
        app:layout_constraintEnd_toStartOf="@id/res_list_start_date"/>

    <TextView
        android:id="@+id/res_list_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="6.25 (금)"
        android:textSize="14dp"
        android:textColor="@color/gray_700"
        app:layout_constraintTop_toBottomOf="@id/res_list_status"
        app:layout_constraintEnd_toEndOf="@id/res_list_status"/>

    <TextView
        android:id="@+id/res_list_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="반납"
        android:textSize="12dp"
        android:textColor="@color/gray_500"
        app:layout_constraintTop_toBottomOf="@id/res_list_text1"
        app:layout_constraintEnd_toEndOf="@id/res_list_text1"/>

    <TextView
        android:id="@+id/res_list_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.4 (화)"
        android:textSize="16dp"
        android:textColor="@color/blue_300"
        app:layout_constraintTop_toBottomOf="@id/res_list_start_date"
        app:layout_constraintEnd_toEndOf="@id/res_list_status"/>

</androidx.constraintlayout.widget.ConstraintLayout>